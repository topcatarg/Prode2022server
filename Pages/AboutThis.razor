@page "/SobreEsto"

<MudContainer Class="pa-4">
    <MudTabs Elevation="2" Rounded="true" Centered="true" Color="@Color.Primary">
        <MudTabPanel Text="Novedades">
            <MudContainer MaxWidth="MaxWidth.Medium">
                <MudPaper>
                    <MudTimeline TimelineAlign="TimelineAlign.Start">
                        <MudTimelineItem Color="Color.Secondary" Elevation="25">
                            <ItemOpposite>
                                <MudText Color="Color.Secondary" Typo="Typo.h6">Version 0.13</MudText>
                            </ItemOpposite>
                            <ItemContent>
                                <MudPaper Elevation="0" Class="mt-n1">
                                    <MudText Typo="Typo.body2">Los usuarios pueden modificar los resultados de sus pronosticos</MudText>
                                </MudPaper>
                            </ItemContent>
                        </MudTimelineItem>
                    </MudTimeline>
                    <MudTimeline TimelineAlign="TimelineAlign.Start">
                        <MudTimelineItem Color="Color.Secondary" Elevation="25">
                            <ItemOpposite>
                                <MudText Color="Color.Secondary" Typo="Typo.h6">Version 0.12</MudText>
                            </ItemOpposite>
                            <ItemContent>
                                <MudPaper Elevation="0" Class="mt-n1">
                                    <MudText Typo="Typo.body2">Se arreglo pantalla de login para celulares</MudText>
                                    <MudText Typo="Typo.body2">Se creo la pantalla de reglamento, y esta misma.</MudText>
                                    <MudText Typo="Typo.body2">Se agregaron preguntas frecuentes.</MudText>
                                </MudPaper>
                            </ItemContent>
                        </MudTimelineItem>
                    </MudTimeline>
                    <MudTimeline TimelineAlign="TimelineAlign.Start">
                        <MudTimelineItem Color="Color.Secondary" Elevation="25">
                            <ItemOpposite>
                                <MudText Color="Color.Secondary" Typo="Typo.h6">Version 0.11</MudText>
                            </ItemOpposite>
                            <ItemContent>
                                <MudPaper Elevation="0" Class="mt-n1">
                                    <MudText Typo="Typo.body2">Se pueden crear usuarios</MudText>
                                    <MudText Typo="Typo.body2">Se pueden crear torneos</MudText>
